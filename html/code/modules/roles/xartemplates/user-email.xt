<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <div class="xar-mod-head">
        <span class="xar-mod-title">Email User</span>
    </div>
    <div class="xar-mod-body">
        <h2>
            <a href="#xarModURL('roles','user','viewlist')#">Member List</a>&#160;&gt;&#160; 
            <a href="#xarModURL('roles','user','display',array('id'=>$id))#">
            #xarVarPrepForDisplay($name)#</a>&#160;&gt;&#160; Send an Email to
            &#160;#xarVarPrepForDisplay($name)#
        </h2>
        <form method="post" action="#xarModURL('roles','user','email',array('phase'=>'confirm'))#" enctype="application/x-www-form-urlencoded">
            <div>
                <xar:if condition="!empty($error_message)">
                    <div class="xar-error">#xarVarPrepForDisplay($error_message)#</div>
                </xar:if>
                <input type="hidden" name="authid" id="authid" value="#$authid#"/>
                <input type="hidden" name="id" id="id" value="#$id#"/>
                <div>
                    <div>
                        <label for="subject">Subject:</label>
                    </div>
                    <input type="text" name="subject" id="subject" size="40" maxlength="100" value="#xarVarPrepForDisplay($subject)#"/>
                </div>
                <div>
                    <div>
                        <label for="message">Message:</label>
                    </div>
                    <textarea name="message" id="message" rows="20" cols="60">#xarVarPrepForDisplay($message)#</textarea>
                </div>
                <xar:var name="label">Send</xar:var>
                <xar:button type="submit" label="$label" name="submit"/>
            </div>
        </form>
    </div>
</xar:template>
