<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <fieldset>
        <legend>Foreign Key Definitions in Tables</legend>
        <table class="xar-table">
            <tr>
                <th>From Table</th>
                <th>From Field</th>
                <th>Reference To Table</th>
                <th>To Field</th>
                <th>On Update</th>
                <th>On Delete</th>
            </tr>
            <xar:foreach in="$foreignkeys" value="$fromto">
                <tr>
                    <td><a href="#xarModURL('dynamicdata','admin','relations',array('table'=>$fromto['source']))#">#$fromto.source#</a></td>
                    <td>#$fromto.from#</td>
                    <td><a href="#xarModURL('dynamicdata','admin','relations',array('table'=>$fromto['target']))#">#$fromto.target#</a></td>
                    <td>#$fromto.to#</td>
                    <td>#$fromto.onupdate#</td>
                    <td>#$fromto.ondelete#</td>
                </tr>
            </xar:foreach>
        </table>
    </fieldset>
</xar:template>