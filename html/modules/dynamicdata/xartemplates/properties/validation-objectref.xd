<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<fieldset>
    <legend>
        <xar:mlstring>Define object and property to reference</xar:mlstring>
    </legend>
        
    <label><xar:mlstring>Which object contains the property to reference</xar:mlstring></label>
    <xar:set name="field">$name.'[objectid]'</xar:set>
    <xar:data-input type="object" value="$objectid" name="$field"  />
    <br/>
    <label><xar:mlstring>Which property should be use as the value to DISPLAY?</xar:mlstring></label>
    <xar:set name="field">$name.'[display_propid]'</xar:set>
    <xar:data-input type="dropdown" options="$properties" value="$display_propid" name="$field"/>
    <br/>
    <label><xar:mlstring>Which property should be used as the value to STORE?</xar:mlstring></label>
    <xar:set name="field">$name.'[store_propid]'</xar:set>
    <xar:data-input type="dropdown" options="$properties" value="$store_propid" name="$field"/>
    
</fieldset></xar:template>
