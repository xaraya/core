<table class="xar-norm">
  <tr>
    <td>
      <xar:mlstring>Icon</xar:mlstring>
    </td>
    <td>
      <input type="text" name="#$name#[icon]" id="#$id#_icon" value="#$icon#" size="50" tabindex="#$tabindex#" />
      <xar:if condition="!empty($icon)">
        <img src="#$icon#" />
      </xar:if>
    </td>
  </tr>
  <tr>
    <td>
      <xar:mlstring>Other rule</xar:mlstring>
    </td>
    <td>
      <input type="text" name="#$name#[other]" id="#$id#_other" value="#$other#" size="50" tabindex="#$tabindex#" />
    </td>
  </tr>
</table>

<xar:if condition="!empty($invalid)">
    <span class="xar-error">#$invalid#</span>
</xar:if>
