<table class="xar-norm">
  <tr>
    <td>
      <xar:mlstring>Rows</xar:mlstring>
    </td>
    <td>
      <input type="text" name="#$name#[rows]" id="#$id#_rows" value="#$rows#" size="4" tabindex="#$tabindex#" />
      (<xar:ml><xar:mlstring>default: #(1)</xar:mlstring><xar:mlvar>#$defaultrows#</xar:mlvar></xar:ml>)
    </td>
  </tr>
  <tr>
    <td>
      <xar:mlstring>Columns</xar:mlstring>
    </td>
    <td>
      <input type="text" name="#$name#[cols]" id="#$id#_cols" value="#$cols#" size="4" tabindex="#$tabindex#" />
      (<xar:ml><xar:mlstring>default: #(1)</xar:mlstring><xar:mlvar>#$defaultcols#</xar:mlvar></xar:ml>)
    </td>
  </tr>
  <tr>
    <td>
      <xar:mlstring>Other rule</xar:mlstring>
    </td>
    <td>
      <input type="text" name="#$name#[other]" id="#$id#_other" value="#$other#" size="50" tabindex="#$tabindex#" />
    </td>
  </tr>
</table>

<xar:if condition="!empty($invalid)">
    <span class="xar-error">#$invalid#</span>
</xar:if>
