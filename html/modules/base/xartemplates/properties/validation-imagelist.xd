<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <table class="xar-norm">
        <tr>
            <td>Base directory</td>
            <td>
            <input type="text" name="#$name#[basedir]" id="#$id#_basedir" value="#$basedir#"
            size="#$size#" tabindex="#$tabindex#" />
            <br />Note : {theme} will be replaced by the current theme directory - e.g.
            {theme}/images -&gt; themes/Xaraya_Classic/images</td>
        </tr>
        <tr>
            <td>Base URL</td>
            <td>
            <input type="text" name="#$name#[baseurl]" id="#$id#_baseurl" value="#$baseurl#"
            size="#$size#" tabindex="#$tabindex#" />
            <br />Note : only needed if different from the base directory</td>
        </tr>
        <tr>
            <td>File extensions</td>
            <td>
                <xar:foreach in="$filetype" value="$ext">
                    <input type="text" name="#$name#[filetype][]" value="#$ext#" size="5"
                    tabindex="#$tabindex#" />
                    <br />
                </xar:foreach>
                <input type="text" name="#$name#[filetype][]" value="" size="5"
                tabindex="#$tabindex#" />
            </td>
        </tr>
        <tr>
            <td>Other rule</td>
            <td>
                <input type="text" name="#$name#[other]" id="#$id#_other" value="#$other#"
                size="#$size#" tabindex="#$tabindex#" />
            </td>
        </tr>
    </table>
    <xar:if condition="!empty($invalid)">
        <span class="xar-error">#$invalid#</span>
    </xar:if>
</xar:template>
