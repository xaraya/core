{
    "name": "xaraya/core",
    "description": "Xaraya Core web development framework",
    "type": "project",
    "require-dev": {
        "nikic/fast-route": "2.0.x-dev",
        "webonyx/graphql-php": "dev-master"
    },
    "suggest": {
        "phpstan/phpstan": "PHP Static Analysis Tool - discover bugs in your code without running it",
        "phpunit/phpunit": "The PHP Unit Testing framework",
        "doctrine/cache": "To use supported Doctrine CacheProviders for caching",
        "doctrine/dbal": "To experiment with JSON data types",
        "phpdocumentor/reflection": "Required to use bermuda_cleanup.php in developer/tools",
        "xaraya/modules": "To experiment with adding modules via composer cli",
        "xaraya/properties": "To experiment with adding properties via composer cli"
    },
    "license": "GPL-2.0-or-later",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "autoload": {
        "classmap": [
            "html/bootstrap.php",
            "html/lib/",
            "html/code/"
        ],
        "files": [
            "html/var/layout.system.php"
        ]
    },
    "scripts": {
        "post-package-install": "xarInstallComposer::postPackageInstall",
        "post-package-update": "xarInstallComposer::postPackageUpdate",
        "post-package-uninstall": "xarInstallComposer::postPackageUninstall",
        "install-module-todo": "xarInstallComposer::eventHandler",
        "list-modules": "xarInstallComposer::showModules"
    },
    "scripts-descriptions": {
        "install-module-todo": "Install Xaraya module via composer (TODO)",
        "list-modules": "List Xaraya modules installed via composer"
    },
    "extra": {
        "installer-paths": {
            "html/code/modules/{name}/": ["type:xaraya-module"],
            "html/themes/{name}/": ["type:xaraya-theme"],
            "html/code/blocks/{name}/": ["type:xaraya-block"],
            "html/code/properties/{name}/": ["type:xaraya-property"]
        },
        "xaraya": {
            "layout": {
                "root": "",
                "web": "",
                "lib": "lib/",
                "code": "code/"
            },
            "install": {
                "module": "code/modules",
                "theme": "web/themes",
                "block": "code/blocks",
                "property": "code/properties"
            }
        }
    }
}
